---
import Layout from '@layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from 'src/i18n/utils';
import { languages } from 'src/i18n/ui';

export const getStaticPaths = () =>
	Object.keys(languages).map((lang) => ({ params: { lang } }));

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('mainAboutTitle')}>
	<section class='aboutpage'>
		<div class='details'>
			<img src='/alfonsomartinportrait.webp' alt='Alfonso Martín Portrait' />
			<div class='data'>
				<h1>Alfonso Martín</h1>
				<small>{t('aboutDescription')}</small>
				<small class='available'>Available for remote work</small>
			</div>
		</div>
	</section>
</Layout>

<style>
	.aboutpage {
		min-height: 100%;
		width: min(100% - 0.5rem, 512px);
		margin-inline: auto;
		@media (width > 478px) {
			width: min(100% - 2.5rem, 512px);
		}
	}

	.details {
		display: flex;
		gap: 1rem;
		align-items: center;
		img {
			max-width: 6rem;
			border-radius: 10rem;
		}
	}
	.data {
		* + * {
			margin-top: 0.4rem;
		}
		h1 {
			font-weight: 400;
		}
		small {
			display: block;
			line-height: 1.1;
		}
		.available {
			background-color: #383838;
			padding: 0.2rem 1rem;
			border-radius: 100rem;
		}
	}
</style>
