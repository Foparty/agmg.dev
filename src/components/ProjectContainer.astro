---
import GitHub from '@icons/GitHub.astro';
import Desktop from '@icons/Desktop.astro';

const { project } = Astro.props;
---

<div class='projectContainer'>
	<div class='dataContainer'>
		<h2 class='title'>{project.data.title}</h2>
		<p class='description'>{project.data.description}</p>
		<p class='excerpt'>{project.data.excerpt}</p>
		<div class='technologies'>
			<a href={project.data.github} target='_blank' rel='noreferrer'>
				<GitHub fill='white' />
			</a>
			<a href={project.data.url} target='_blank' rel='noreferrer'>
				<Desktop fill='white' />
			</a>
		</div>
	</div>
	<div class='coverContainer'>
		<img
			src={project.data.cover}
			alt={`cover image of ${project.data.title} | ${project.data.description}`}
		/>
	</div>
</div>

<style>
	.projectContainer {
		scroll-snap-align: center;
		display: flex;
		flex-direction: column;
		justify-content: center;
		gap: 2rem;
		height: 100%;
		width: 100%;
		padding: 2rem 0;
		@media (width > 680px) {
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
			gap: 1rem;
		}
	}
	.dataContainer,
	.coverContainer {
		@media (width > 680px) {
			flex: 1;
		}
	}
	.coverContainer {
		height: 80%;
		overflow: hidden;
		display: grid;
		place-items: center;
		img {
			border-radius: 0.8rem;
			object-fit: cover;
			width: 100%;
			height: 100%;
			@media (width > 680px) {
				object-fit: cover;
				width: 100%;
				height: auto;
				aspect-ratio: 16 / 9;
			}
		}
	}

	.technologies {
		padding: 2rem 0 0 0;
		display: flex;
		gap: 1rem;
	}
	.title {
		font-size: clamp(2rem, 3vw + 1rem, 4rem);
		line-height: 1.2;
		color: white;
	}
	.description {
		font-size: clamp(0.7rem, 1vw + 0.5rem, 0.9rem);
	}
	.excerpt {
		font-size: clamp(0.8rem, 1vw + 0.5rem, 1.1rem);
		color: white;
	}
</style>
