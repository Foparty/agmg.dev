---
import GitHub from '@icons/GitHub.astro';
import Desktop from '@icons/Desktop.astro';

const { project } = Astro.props;
---

<div class='projectContainer'>
	<div class='dataContainer'>
		<h2 class='title'>{project.data.title}</h2>
		<p class='description'>{project.data.description}</p>
		<p class='excerpt'>{project.data.excerpt}</p>
		<div class='technologies'>
			<a href={project.data.github} target='_blank' rel='noreferrer'>
				<GitHub fill='white' />
			</a>
			<a href={project.data.url} target='_blank' rel='noreferrer'>
				<Desktop />
			</a>
		</div>
	</div>
	<div class='coverContainer'>
		<img
			src={project.data.cover}
			alt={`cover image of ${project.data.title} | ${project.data.description}`}
		/>
	</div>
</div>

<style>
	.projectContainer {
		width: 70%;
		height: auto;
		max-height: 60vh;
		aspect-ratio: 9 / 16;
		background: repeating-linear-gradient(
			45deg,
			#0a0c0d 0,
			#0a0c0d 10px,
			#020202 20px,
			#0a0c0d 30px
		);
		border-radius: 0.8rem;
		box-shadow: 1px 2px 5px 0px rgba(0, 0, 0, 0.8);
		padding: 1rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
		gap: 2rem;

		@media (width > 680px) {
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
			gap: 1rem;
			padding: 3rem;
			aspect-ratio: 5/ 3;
		}
	}
	.dataContainer,
	.coverContainer {
		@media (width > 680px) {
			flex: 1;
		}
	}
	.coverContainer {
		height: 80%;
		overflow: hidden;
		display: grid;
		place-items: center;
		img {
			border-radius: 0.8rem;
			object-fit: cover;
			width: 100%;
			height: 100%;
			@media (width > 680px) {
				object-fit: cover;
				width: 100%;
				height: auto;
				aspect-ratio: 16 / 9;
			}
		}
	}

	.technologies {
		padding: 2rem 0 0 0;
		display: flex;
		gap: 1rem;
	}
	.title {
		font-size: clamp(2rem, 3vw + 1rem, 4rem);
		line-height: 1.2;
		color: white;
	}
	.description {
		font-size: clamp(0.7rem, 1vw + 0.5rem, 0.9rem);
	}
	.excerpt {
		font-size: clamp(0.8rem, 1vw + 0.5rem, 1.1rem);
		color: white;
	}
</style>
