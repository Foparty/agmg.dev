---
import GitHub from '@icons/GitHub.astro';
import Desktop from '@icons/Desktop.astro';
import Live from '@icons/Live.astro';

const { project } = Astro.props;
---

<div class="projectContainer">
  <div class="dataContainer">
    <h2 class="title">{project.data.title}</h2>
    {
      project.data.description && (
        <p class="description">{project.data.description}</p>
      )
    }
    <p class="excerpt">{project.data.excerpt}</p>
    <div class="links">
      {
        project.data.github && (
          <a href={project.data.github} target="_blank" rel="noreferrer">
            <GitHub fill="white" />
          </a>
        )
      }
      {
        project.data.site && (
          <a href={project.data.site} target="_blank" rel="noreferrer">
            <Desktop />
          </a>
        )
      }

      {
        project.data.live && (
          <a href={project.data.live} target="_blank" rel="noreferrer">
            <Live />
          </a>
        )
      }
    </div>
  </div>
  <div class="coverContainer">
    <img
      src={project.data.cover}
      alt={`cover image of ${project.data.title} | ${project.data.description}`}
    />
  </div>
</div>

<style>
  .projectContainer {
    width: 100%;
    height: auto;
    background: #111;
    border-radius: 0.5rem;
    box-shadow: 1px 2px 5px 0px rgba(0, 0, 0, 0.6);
    padding-block: 2rem 1rem;
    padding-inline: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;

    @media (width > 576px) {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: 1rem;
    }
  }
  .dataContainer {
    display: flex;
    flex-direction: column;
    > * {
      margin-top: 1rem;
    }
    /* gap: 3rem; */

    .title {
      font-size: clamp(1rem, 2vw + 1rem, 2rem);
      line-height: 1.2;
      color: white;
    }
    .description {
      margin-top: 0rem;
      max-width: 64ch;
      font-size: clamp(0.7rem, 1vw + 0.5rem, 0.9rem);
    }
    .excerpt {
      margin-top: 1rem;
      max-width: 54ch;
      font-size: clamp(0.8rem, 1vw + 0.5rem, 1.1rem);
      color: white;
    }
    .links {
      padding: 1rem 0 0 0;
      display: flex;
      gap: 1rem;
    }
  }
  .coverContainer img {
    border-radius: 0.5rem;
    overflow: hidden;
    @media (width > 576px) {
      width: 15rem;
      border-radius: 0.5rem;
    }
  }
  p + p {
    margin: 0;
  }
